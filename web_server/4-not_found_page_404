#!/usr/bin/env bash
# Set up Apache with a custom 404 page

sudo apt-get update -y
sudo apt-get install -y apache2

# Create custom 404 page
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html > /dev/null

# Configure Apache to use the custom 404 page
sudo sed -i '/ErrorDocument 404/d' /etc/apache2/sites-available/000-default.conf
echo "ErrorDocument 404 /404.html" | sudo tee -a /etc/apache2/sites-available/000-default.conf > /dev/null

# Restart Apache to apply changes
sudo systemctl restart apache2

